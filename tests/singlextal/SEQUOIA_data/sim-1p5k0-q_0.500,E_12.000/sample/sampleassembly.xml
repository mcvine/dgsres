<?xml version="1.0"?>

<!DOCTYPE SampleAssembly>

<SampleAssembly name="X"
   max_multiplescattering_loops_among_scatterers="1"
   max_multiplescattering_loops_interactM_path1="4"
   min_neutron_probability=".1"
 >


  <PowderSample name="NiPS3" type="sample">
    <Shape>
      <cylinder radius="12.5*mm" height="10.0*mm" />
    </Shape>
    <Phase type="crystal">
      <ChemicalFormula>NiPS3</ChemicalFormula>
      <xyzfile>NiPS3.xyz</xyzfile>
    </Phase>
  </PowderSample>


  <LocalGeometer registry-coordinate-system="InstrumentScientist">

    <Register name="NiPS3" position="(0,0,0)" orientation="(0, 0, 0)"/>

  </LocalGeometer>


  <Environment temperature="0.3*K"/>


</SampleAssembly>
